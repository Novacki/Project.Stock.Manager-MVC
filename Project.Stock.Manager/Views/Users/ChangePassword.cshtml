@model Project.Stock.Manager.Application.Models.ViewModels.UserAccountChangePasswordViewModel;

@{
    ViewData["Title"] = "Change Password";
}

<h1>Change Password User Account</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form class="userForm" asp-action="ChangePassword">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <h2>@Html.DisplayFor(model => model.UserName)</h2>
            </div>
            <div class="form-group">
                <label class="control-label">New Password</label>
                <input asp-for="Password" type="password" required class="form-control password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Confirm Password</label>
                <input type="password" required class="form-control password_again" name="password_again" />
                <span class="text-danger confirmError"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-outline-success" />
                <a class="btn btn-outline-info" asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
